{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "settings": {
    "react": {
      "version": "detect" // Ensure React version detection works correctly
    }
  },
  // Configure overrides to apply rules to files within packages
  "overrides": [
    {
      // Target TypeScript and JavaScript files within any directory under 'packages'
      "files": ["packages/**/*.{js,jsx,ts,tsx}"],
      "rules": {}
    },
    {
      // If you have test files within packages that need different lint rules
      "files": ["packages/**/__tests__/**/*.{js,jsx,ts,tsx}", "packages/**/*.test.{js,jsx,ts,tsx}"],
      "rules": {
        // Example: Allow specific test syntax
        "jest/valid-expect": "off"
      }
    }
  ],
  "ignorePatterns": ["node_modules/", ".next/", "dist/", "out/", "build/", ".pnpm/", ".pnpm-store/"]
}
