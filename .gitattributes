# Auto detect text files and normalize line endings
* text=auto

# Explicitly set line endings for commonly sensitive file types to LF
*.css text eol=lf
*.html text eol=lf
*.js text eol=lf
*.json text eol=lf
*.jsx text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.eslintrc.js text eol=lf # Add other config files
.prettierrc.js text eol=lf
tsconfig.json text eol=lf
pnpm-workspace.yaml text eol=lf
# Add any other text file types you use

# Declare files that are binary and should not have line endings normalized
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
