{
  "name": "@silocitypages/ui-core",
  "version": "1.0.0",
  "description": "Core UI components and hooks for SiloCityPages projects",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:ts && pnpm run build:copy-styles",
    "build:ts": "tsc --outDir dist",
    "build:copy-styles": "cpx \"src/styles/**/*.css\" dist/styles",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "watch": "tsc --watch --outDir dist"
  },
  "dependencies": {
    "@silocitypages/utils": "workspace:^1.0.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "bootstrap": "^5.3.3",
    "react-bootstrap": "^2.10.9",
    "react-content-loader": "^7.0.2",
    "react-select": "^5.10.1"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "cpx": "^1.5.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "^15.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
